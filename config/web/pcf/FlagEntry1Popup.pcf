<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../pcf.xsd">
  <Popup
    canEdit="true"
    id="FlagEntry1Popup"
    startInEditMode="aFlagEntry.IsEditable"
    title="displaykey.Training.FlagEntry">
    <LocationEntryPoint
      signature="FlagEntry1PopUp(aFlagEntry:FlagEntry)"/>
    <Variable
      name="aFlagEntry"
      type="FlagEntry"/>
    <Screen>
      <Toolbar>
        <EditButtons/>
      </Toolbar>
      <PanelRef>
        <DetailViewPanel
          editable="aFlagEntry.IsEditable"
          id="FlagEntryDV">
          <InputColumn>
            <DateInput
              id="DateFlagged"
              label="displaykey.Training.DateFlagged"
              value="aFlagEntry.FlagDate"/>
            <TypeKeyInput
              editable="true"
              id="Reason"
              label="displaykey.Training.Reason"
              value="aFlagEntry.Reason"/>
            <TextAreaInput
              editable="true"
              id="Resolution"
              label="displaykey.Training.Resolution"
              maxChars="80"
              numCols="20"
              numRows="3"
              value="aFlagEntry.Resolution">
              <PostOnChange
                onChange="aFlagEntry.setFieldsOnResolution()"
                target="DATA_ONLY"/>
            </TextAreaInput>
            <Input
              id="UnflagUser"
              label="displaykey.Training.UserWhoUnflaggedEntry"
              numCols="100"
              value="aFlagEntry.UnflagUser"/>
            <DateInput
              id="UnflagDate"
              label="displaykey.Training.DateUnflagged"
              value="aFlagEntry.UnflagDate"/>
          </InputColumn>
        </DetailViewPanel>
      </PanelRef>
    </Screen>
  </Popup>
</PCF>